    "keywords": ["comment analyzer","moderation","perspective","api"],
    "homepage": "https://github.com/bredmor/comment-analyzer",
    "license": "MIT",
    "authors": [
        {
            "name": "Morgan Breden",
            "email": "morganbreden@gmail.com"
        }
    ],
    "require":  {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "~7.0",
        "psr/log": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
